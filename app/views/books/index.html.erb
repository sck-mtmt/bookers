<body>
<p id="notice"></p>
<h1>Books</h1>
 <table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
    <td>
     <%= book.title %>
    </td>
    <td>
     <%= book.body %>
    </td>
    <td>
     <%= link_to "show", book_path(book.id) %>
     <%= link_to "edit", edit_book_path(book.id) %>
     <%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
    </td>
    </tr>
   <% end %>
  </tbody>
 </table>
<!new.html>

<h2>New book</h2>
  <%= form_with model:@book do |f| %>
<div class="field">
  <%= f.label :title%><br>
  <%= f.text_field :title%>
</div>
<div class="field">
  <%= f.label :body%><br>
  <%= f.text_area :body%>
<div>
  <%= f.submit'Create Book' %>
  <% end %>
</body>
