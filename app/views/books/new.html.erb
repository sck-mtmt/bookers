<h1>Books</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h3>New book</h3>
  <%= form_with model:@book do |f| %>
<h4>Title</h4>
  <%= f.text_field :title %>

<h4>Body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit'Create Book' %>
  <% end %>
